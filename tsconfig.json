{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "CommonJS",
    "importHelpers": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "src/**/*.json"],
  "ts-node": {
    "files": true
  },
  "files": ["src/@types/env.d.ts"]
}
